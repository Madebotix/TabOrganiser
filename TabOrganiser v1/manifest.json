{
  "manifest_version": 3,
  "name": "Tab Organiser",
  "version": "1.0",
  "description": "Ensures there's always an unfocused new tab, manages tab placement, and updates group names and colors.",
  "permissions": ["tabs", "tabGroups", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "./popup/popup.html",
    "default_icon": {
      "16": "src/icon16.png",
      "48": "src/icon48.png",
      "128": "src/icon128.png"
    }
  },
  "icons": {
    "16": "src/icon16.png",
    "48": "src/icon48.png",
    "128": "src/icon128.png"
  },
  "host_permissions": ["*://*/*"]
}
